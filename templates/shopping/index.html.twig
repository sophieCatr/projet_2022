				              <td>{{item.car.prix * item.quantity}}</td>
				              <td>
				                <a href="#" class="btn btn-danger btn-sm">
				                  <i class="fas fa-trash"></i> supprimer
				                </a>
				              </td>
				
				            </thead>
				          </table> #}
      {% endfor %}
    </div>
  {% else %}
    <p>Hello customer , your shopping cart is empty</p>
  {% endif %}
{% endblock %}
